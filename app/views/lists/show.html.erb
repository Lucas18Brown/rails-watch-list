<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, height: 500, crop: :fill %>)">
  <h1 class="text-center m-4"><%= @list.name %></h1>
</div>
<div class="cards">
<% @list.bookmarks.each do |bookmark| %>
  <div class="card">
    <div class="movie">
      <h2>
        <%= bookmark.movie.title %>
      </h2>
      <p>
        <%= bookmark.movie.overview %>
      </p>
    </div>
    <img src="<%= bookmark.movie.poster_url %>" alt="poster">
  </div>
  <% end %>
  </div>

<div class="bookmark-icon">
  <%= link_to new_list_bookmark_path(@list) do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
</div>

<div class="back-icon">
  <%= link_to lists_path do %>
    <i class="fa-solid fa-arrow-left-long"></i>
  <% end %>
</div>
