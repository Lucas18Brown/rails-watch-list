<h1 class="text-center m-4">Lists</h1>
<ul>
  <div class="cards">
    <% @lists.each do |list| %>
      <li>
        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 500, crop: :fill %>')">
            <%= link_to list.name, list_path(list) %>
              <p>
                <%= link_to list_path(list),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
                  <i class="fa-solid fa-circle-minus"></i>
                <% end %>
              </p>
          </div>
        <% end %>
      </li>
    <% end %>
    </div>
</ul>

<%= link_to new_list_path do %>
  <i class="fa-solid fa-plus"></i>
<% end %>
