<h1>Lists</h1>
<ul>
  <% @lists.each do |list| %>
    <li>
      <% if list.photo.attached? %>
        <div class="card-category col-6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 500, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "add", new_list_path %>
